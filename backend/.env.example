APP_NAME=Pinoy-Paypal
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Manila
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ---- Database (Docker: service "db") ----
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=pinoy_paypal
DB_USERNAME=ppk_user
DB_PASSWORD=ppk_pass

# ---- Cache / Queue / Files ----
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# ---- Sanctum + CORS (SPA on :3000) ----
SANCTUM_STATEFUL_DOMAINS=localhost:3000
SESSION_DOMAIN=localhost
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ---- Mail (optional for notifications; Mailpit example) ----
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@pinoy-paypal.local"
MAIL_FROM_NAME="${APP_NAME}"

# ---- Redis (unused for now) ----
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ---- Vite (Laravel-side only; separate React app uses its own .env) ----
VITE_APP_NAME="${APP_NAME}"
